<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.wta.NewCloudApp.mvp.ui.widget.MoneyBar
        app:textTitle="现金收益"
        style="@style/MoneyBar"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:elevation="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/merchant_in_head_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#ff667f"
                        android:id="@+id/tv_month"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@mipmap/calendar_month"
                        android:text="2018.08"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_switch"
                        android:text="日收益"
                        android:layout_alignParentRight="true"
                        android:padding="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_below="@id/tv_switch"
                        android:id="@+id/line"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        style="@style/Line"/>
                    <TextView
                        android:id="@+id/tv_total_str"
                        android:textColor="#666"
                        android:textSize="12sp"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/line"
                        android:text="总收益"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RelativeLayout
                        android:id="@+id/lat_money"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/tv_total_str"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="12dp"
                            android:id="@+id/tv_yang"
                            android:text="￥"
                            android:textColor="#f66"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_total_money"
                            android:layout_toRightOf="@id/tv_yang"
                            android:textColor="#f66"
                            android:textSize="30sp"
                            android:layout_alignBottom="@id/tv_yang"
                            android:layout_centerHorizontal="true"
                            android:text="88.88"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_marginTop="42dp"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@id/lat_money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="#666"
                                android:textSize="18sp"
                                android:id="@+id/tv_total_person"
                                android:text="20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textSize="12sp"
                                android:textColor="#666"
                                android:layout_marginTop="8dp"
                                android:text="顾客人数"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="#666"
                                android:textSize="18sp"
                                android:id="@+id/tv_total_count"
                                android:text="20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textSize="12sp"
                                android:textColor="#666"
                                android:layout_marginTop="8dp"
                                android:text="收款笔数"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="#666"
                                android:textSize="18sp"
                                android:id="@+id/tv_total_fee"
                                android:text="20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textSize="12sp"
                                android:textColor="#666"
                                android:layout_marginTop="8dp"
                                android:text="服务费"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:elevation="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/merchant_in_head_bg"
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>