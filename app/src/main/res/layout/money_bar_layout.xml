<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/money_bar_parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/money_bar_height"
    android:background="@color/style_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            style="@style/SelectBackgroundBorderless"
            android:id="@+id/money_bar_back_lat"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="30dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/white_back"
                android:id="@+id/im_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center" />
        </LinearLayout>
        <TextView
            android:text="标题"
            android:id="@+id/money_bar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_20" />
    </RelativeLayout>
    <TextView
        style="@style/SelectBackgroundBorderless"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:id="@+id/tail_text"
        android:textSize="@dimen/text_17"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <ImageView
        android:src="@mipmap/qr_more"
        style="@style/SelectBackgroundBorderless"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:id="@+id/im_tail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <View
        android:id="@+id/money_bar_line"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</RelativeLayout>