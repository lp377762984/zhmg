<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.wta.NewCloudApp.mvp.ui.widget.MoneyBar
        android:id="@+id/mb"
        app:textTitle="设置"
        android:layout_width="match_parent"
        android:layout_height="@dimen/money_bar_height"/>
    <RelativeLayout
        android:id="@+id/lat_phone"
        android:layout_marginTop="10dp"
        android:paddingLeft="19dp"
        android:paddingRight="9dp"
        android:layout_below="@id/mb"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/text_color2"
            android:layout_centerVertical="true"
            android:text="手机号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textColor="@color/text_color_gray2"
            android:layout_centerVertical="true"
            android:text="未绑定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lat_wx"
        android:layout_marginTop="10dp"
        android:paddingLeft="19dp"
        android:paddingRight="9dp"
        android:layout_below="@id/lat_phone"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:gravity="center"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/setting_wx"
            android:textSize="16sp"
            android:textColor="@color/text_color2"
            android:layout_centerVertical="true"
            android:text="微信"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textColor="@color/text_color_gray2"
            android:layout_centerVertical="true"
            android:text="未绑定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lat_clear"
        android:layout_marginTop="10dp"
        android:paddingLeft="19dp"
        android:paddingRight="9dp"
        android:layout_below="@id/lat_wx"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:gravity="center"
            android:drawablePadding="10dp"
            android:textSize="16sp"
            android:textColor="@color/text_color2"
            android:layout_centerVertical="true"
            android:text="清理缓存"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/im_go"
            android:layout_alignParentRight="true"
            android:src="@mipmap/go"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_memory"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@id/im_go"
            android:textSize="16sp"
            android:textColor="@color/text_color_gray2"
            android:layout_centerVertical="true"
            android:text="2.5M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lat_update"
        android:paddingLeft="19dp"
        android:paddingRight="9dp"
        android:layout_below="@id/lat_clear"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:gravity="center"
            android:drawablePadding="10dp"
            android:textSize="16sp"
            android:textColor="@color/text_color2"
            android:layout_centerVertical="true"
            android:text="版本更新"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/im_go2"
            android:layout_alignParentRight="true"
            android:src="@mipmap/go"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_version"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@id/im_go2"
            android:textSize="16sp"
            android:textColor="@color/text_color_gray2"
            android:layout_centerVertical="true"
            android:text="1.0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_exit"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/login_btn_bg"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="83dp"
        android:layout_alignParentBottom="true"
        android:text="安全退出"
        android:layout_width="match_parent"
        android:layout_height="37dp" />
</RelativeLayout>