<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@drawable/merchant_in_bg"
        android:layout_width="match_parent"
        android:layout_height="188dp"/>
    <com.wta.NewCloudApp.mvp.ui.widget.MoneyBar
        android:id="@+id/mb"
        android:layout_marginTop="@dimen/status_bar"
        app:barBg="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/money_bar_height"
        app:textTitle="商家服务" />
    <android.support.design.widget.TabLayout
        android:layout_below="@id/mb"
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tabIndicatorColor="@color/tab_yellow"
        app:tabIndicatorHeight="2dp"
        app:tabTextAppearance="@style/tab_appearance"
        app:tabTextColor="@color/white"
        app:tabSelectedTextColor="@color/tab_yellow" />
    <android.support.v4.widget.NestedScrollView
        android:layout_marginTop="114dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bs_head_bg">

                <TextView
                    android:id="@+id/tv_benefit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="30dp"
                    android:text="00.00元"
                    android:textColor="@color/style_color"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="53dp"
                    android:layout_marginStart="53dp"
                    android:drawableLeft="@mipmap/bs_qr"
                    android:drawablePadding="5dp"
                    android:text="收款码"
                    android:textColor="@color/style_color"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="53dp"
                    android:layout_marginRight="53dp"
                    android:drawableLeft="@mipmap/bs_record"
                    android:drawablePadding="5dp"
                    android:text="记录"
                    android:textColor="@color/style_color"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="17dp"
                android:paddingRight="17dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="22dp"
                    android:background="@color/style_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="推荐服务"
                    android:textColor="@color/text_color2"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lat_bs_benefit"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_marginTop="7dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="36dp"
                android:paddingRight="36dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="商家权益"
                    android:textColor="@color/text_color2"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="边经营边赚钱"
                    android:textColor="@color/text_color_gray2"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lat_bs_details"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_marginTop="7dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="36dp"
                android:paddingRight="36dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="我的店铺"
                    android:textColor="@color/text_color2"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="一账户一店铺"
                    android:textColor="@color/text_color_gray2"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/im_btm"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:src="@color/style_color" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>