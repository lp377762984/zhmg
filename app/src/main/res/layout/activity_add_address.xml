<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.wta.NewCloudApp.mvp.ui.widget.MoneyBar
        app:needLine="true"
        app:titleColor="#000"
        app:barBg="@color/white"
        app:textTitle="收货地址"
        android:id="@+id/mb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/money_bar_height"/>
    <RelativeLayout
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/text_color2"
            android:layout_centerVertical="true"
            android:text="收货人："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.wta.NewCloudApp.mvp.ui.widget.EditTextHint
            android:id="@+id/et_name"
            android:background="@null"
            android:textColor="@color/text_color2"
            android:textSize="16sp"
            app:hintSize="16sp"
            android:layout_marginLeft="90dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/text_color2"
            android:layout_centerVertical="true"
            android:text="手机号："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.wta.NewCloudApp.mvp.ui.widget.EditTextHint
            android:id="@+id/et_number"
            android:background="@null"
            android:textColor="@color/text_color2"
            android:textSize="16sp"
            app:hintSize="16sp"
            android:layout_marginLeft="90dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/text_color2"
            android:layout_centerVertical="true"
            android:text="所在区域："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.wta.NewCloudApp.mvp.ui.widget.EditTextHint
            android:id="@+id/et_region"
            android:background="@null"
            android:textColor="@color/text_color2"
            android:textSize="16sp"
            app:hintSize="16sp"
            android:layout_marginLeft="90dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/text_color2"
            android:layout_centerVertical="true"
            android:text="详细地址："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.wta.NewCloudApp.mvp.ui.widget.EditTextHint
            android:id="@+id/et_address"
            android:background="@null"
            android:textColor="@color/text_color2"
            android:textSize="16sp"
            app:hintSize="16sp"
            android:layout_marginLeft="90dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/text_color2"
            android:layout_centerVertical="true"
            android:text="设为默认地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Switch
            android:id="@+id/switchButton"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_save"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="保存"
        android:background="@drawable/add_card_save_bg"
        android:layout_width="match_parent"
        android:layout_height="36dp" />
</LinearLayout>