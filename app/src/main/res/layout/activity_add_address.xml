<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.wta.NewCloudApp.mvp.ui.widget.MoneyBar
        app:textTail="删除"
        app:textTitle="收货地址"
        android:id="@+id/mb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/money_bar_height"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/merchant_in_head_bg"
        android:elevation="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_centerVertical="true"
                android:text="收货人："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.wta.NewCloudApp.mvp.ui.widget.EditTextHint
                android:hint="收货人姓名"
                android:id="@+id/et_name"
                android:background="@null"
                android:textSize="14sp"
                android:textColor="#333"
                app:hintSize="14sp"
                android:textColorHint="#999"
                android:layout_marginLeft="90dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:layout_alignParentBottom="true"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_centerVertical="true"
                android:text="手机号："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.wta.NewCloudApp.mvp.ui.widget.EditTextHint
                android:hint="收货人手机号"
                android:inputType="number"
                android:id="@+id/et_number"
                android:background="@null"
                android:textSize="14sp"
                android:textColor="#333"
                app:hintSize="14sp"
                android:textColorHint="#999"
                android:layout_marginLeft="90dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:layout_alignParentBottom="true"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_centerVertical="true"
                android:text="所在区域："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/im_01"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toLeftOf="@id/im_01"
                android:gravity="center_vertical"
                android:id="@+id/tv_region"
                android:background="@null"
                android:textColor="#333"
                android:textSize="14sp"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:layout_alignParentBottom="true"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_centerVertical="true"
                android:text="详细地址："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.wta.NewCloudApp.mvp.ui.widget.EditTextHint
                android:hint="如道路、门牌号、小区、楼牌号、单元室"
                android:maxLines="2"
                android:lineSpacingMultiplier="1.2"
                android:id="@+id/et_address"
                android:background="@null"
                android:textSize="14sp"
                android:textColor="#333"
                app:hintSize="14sp"
                android:textColorHint="#999"
                android:layout_marginLeft="90dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:layout_alignParentBottom="true"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_centerVertical="true"
                android:text="设为默认地址"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Switch
                android:id="@+id/switchButton"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentBottom="true"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_save"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="保存"
        android:background="@drawable/det_btn_bg"
        android:layout_width="match_parent"
        android:layout_height="36dp" />
</LinearLayout>