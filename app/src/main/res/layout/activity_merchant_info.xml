<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wta.NewCloudApp.mvp.ui.widget.MoneyBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/money_bar_height"
        app:textTitle="店铺详情" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/merchant_in_head_bg"
                android:elevation="5dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/lat_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="商户名称"
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <com.wta.NewCloudApp.mvp.ui.widget.EditTextHint
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="36dp"
                        android:layout_toRightOf="@id/tv_01"
                        android:background="@null"
                        android:hint="请输入商户名称"
                        android:maxLines="1"
                        android:textColor="#333"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lat_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="起始时间"
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="37dp"
                        android:layout_toRightOf="@id/tv_02"
                        android:background="@null"
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/go" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/line" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lat_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="结束时间"
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="37dp"
                        android:layout_toRightOf="@id/tv_03"
                        android:background="@null"
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/go" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/line" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lat_type"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="主营类目"
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="37dp"
                        android:layout_toRightOf="@id/tv_04"
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/go" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lat_class"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="店铺级别"
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="37dp"
                        android:layout_toRightOf="@id/tv_05"
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/go" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/merchant_in_head_bg"
                android:elevation="5dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/lat_loc_4"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_07"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="所在区县"
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/im_07"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/go" />

                    <TextView
                        android:id="@+id/tv_loc_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="37dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/im_07"
                        android:layout_toRightOf="@id/tv_07"
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/line" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/lat_location"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="店铺定位"
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/im_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/b_position" />

                    <TextView
                        android:textColor="#333"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="37dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/im_position"
                        android:layout_toRightOf="@id/tv_06"
                        android:background="@null" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/line" />
                </RelativeLayout>

                <com.wta.NewCloudApp.mvp.ui.widget.EditTextHint
                    android:id="@+id/et_location_det"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:hint="地址详情：如街道、门牌号、小区、楼栋号、单元室等"
                    android:textColorHint="#999"
                    android:textColor="#333"
                    android:textSize="14sp" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/merchant_in_head_bg"
                android:elevation="5dp">

                <TextView
                    android:id="@+id/tv_08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="门头照"
                    android:textColor="#333"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/im_head"
                    android:layout_width="180dp"
                    android:layout_height="73dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:src="@mipmap/b_head_placeholder" />

                <CheckBox
                    android:layout_alignLeft="@id/im_head"
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/im_head"
                    android:layout_marginBottom="17dp"
                    android:layout_marginTop="15dp"
                    android:button="@drawable/b_agress_cb"/>
                <TextView
                    android:id="@+id/tv_protocol"
                    android:layout_marginLeft="7dp"
                    android:textColor="#999"
                    android:textSize="12sp"
                    android:text="我已阅读并理解《入驻协议》"
                    android:layout_toRightOf="@id/checkBox"
                    android:layout_alignTop="@id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_apply"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/det_btn_bg"
                android:text="提交"
                android:textColor="#f9f9f9"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>