<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.wta.NewCloudApp.mvp.ui.widget.MoneyBar
        android:id="@+id/mb"
        app:textTail="说明"
        app:textTitle="积分明细"
        android:layout_width="match_parent"
        android:layout_height="@dimen/money_bar_height"/>
    <com.flyco.tablayout.SlidingTabLayout
        android:background="@color/white"
        app:tl_textSelectColor="@color/style_color"
        app:tl_textUnselectColor="#333"
        app:tl_indicator_color="@color/style_color"
        app:tl_indicator_height="1.5dp"
        app:tl_indicator_margin_left="6.5dp"
        app:tl_indicator_margin_right="6.5dp"
        app:tl_iconVisible="false"
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>